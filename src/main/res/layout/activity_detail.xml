<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jerry="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/choose_bg"
    android:orientation="horizontal"
    android:padding="@dimen/detail_space">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/detail_bg"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_hyphens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_hospital"
                    android:text=""
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_hyphens"
                    android:lines="1"
                    android:text="心里内科"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/tv_bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_hospital"
                    android:text="床"
                    android:textColor="@color/choose_title"
                    android:textSize="20sp" />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/detail_space"
            android:background="@color/detail_bg"
            android:orientation="vertical"
            android:paddingTop="@dimen/detail_space">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/line_left_view_width"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/line_marginLeft"
                    android:text="@string/hos_id"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_hos_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_line_height"
                android:layout_marginTop="@dimen/line_marginTop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/v_name"
                    android:layout_width="@dimen/line_left_view_width"
                    android:layout_height="match_parent"
                    android:background="@color/name_text_female" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/line_marginLeft"
                    android:text="@string/name"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/name_text_female"
                    android:textSize="@dimen/detail_hospital" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_line_height"
                android:layout_marginTop="@dimen/line_marginTop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/line_left_view_width"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/line_marginLeft"
                    android:text="@string/sex"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_line_height"
                android:layout_marginTop="@dimen/line_marginTop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/line_left_view_width"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/line_marginLeft"
                    android:text="@string/age"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_line_height"
                android:layout_marginTop="@dimen/line_marginTop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/line_left_view_width"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/line_marginLeft"
                    android:text="@string/diagnosis"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_diagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_line_height"
                android:layout_marginTop="@dimen/line_marginTop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/line_left_view_width"
                    android:layout_height="match_parent"
                    android:background="@color/history_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/line_marginLeft"
                    android:text="@string/history"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/history_text"
                    android:textSize="@dimen/detail_hospital" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_line_height"
                android:layout_marginTop="@dimen/line_marginTop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/line_left_view_width"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/line_marginLeft"
                    android:text="@string/doctor"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_line_height"
                android:layout_marginTop="@dimen/line_marginTop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/line_left_view_width"
                    android:layout_height="match_parent"
                    android:background="@color/history_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/line_marginLeft"
                    android:text="@string/nurse"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_nurse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/history_text"
                    android:textSize="@dimen/detail_hospital" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_line_height"
                android:layout_marginTop="@dimen/line_marginTop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/line_left_view_width"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/line_marginLeft"
                    android:text="@string/in_date"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_in_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_line_height"
                android:layout_marginTop="@dimen/line_marginTop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/v_level"
                    android:layout_width="@dimen/line_left_view_width"
                    android:layout_height="match_parent"
                    android:background="@color/second_level" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/line_marginLeft"
                    android:text="@string/level"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/second_level"
                    android:textSize="@dimen/detail_hospital" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_line_height"
                android:layout_marginTop="@dimen/line_marginTop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/line_left_view_width"
                    android:layout_height="match_parent"
                    android:background="@color/food_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/line_marginLeft"
                    android:text="@string/food"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/detail_hospital" />

                <TextView
                    android:id="@+id/tv_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/food_text"
                    android:textSize="@dimen/detail_hospital" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_note"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/detail_space"
        android:layout_weight="1"
        android:orientation="vertical">


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/detail_space"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_temperature"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/detail_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_space"
                android:text="@string/temperature"
                android:textColor="@color/white"
                android:textSize="@dimen/detail_hospital" />

            <TextView
                android:id="@+id/tv_temperature_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/detail_space"
                android:layout_marginLeft="@dimen/detail_space"
                android:text="设备未连接"
                android:textColor="@color/choose_title"
                android:textSize="@dimen/device_state" />


            <LinearLayout
                android:id="@+id/ll_battery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_temperature_state"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="invisible">


                <TextView
                    android:id="@+id/tv_temperature_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/detail_space"
                    android:text="18%"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/device_state" />

                <ImageView
                    android:id="@+id/iv_temperature_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/battery_1" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_bluetooth"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="180dp"
                android:src="@drawable/bluetooth_icon" />


            <com.jerry.bedpad.view.RippleBackground
                android:id="@+id/ripple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                jerry:rb_color="#474e5e"
                jerry:rb_duration="4500"
                jerry:rb_radius="44dp"
                jerry:rb_rippleAmount="3"
                jerry:rb_scale="2">

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textColor="@color/history_text"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/tv_temperature_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_value"
                    android:layout_centerInParent="true"
                    android:text="°C"
                    android:textColor="@color/choose_title"
                    android:textSize="16sp"
                    android:visibility="invisible" />

            </com.jerry.bedpad.view.RippleBackground>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_drip"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detail_space"
            android:layout_weight="1"
            android:background="@color/detail_bg"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_drip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drip"
                android:textColor="@color/white"
                android:textSize="@dimen/detail_hospital" />

            <LinearLayout
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_drip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="63"
                    android:textColor="@color/food_text"
                    android:textSize="44sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分钟"
                        android:textColor="@color/choose_title"
                        android:textSize="@dimen/remaining_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余时间"
                        android:textColor="@color/choose_title"
                        android:textSize="@dimen/remaining_text" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_drip_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="设备未连接"
                android:textColor="@color/choose_title"
                android:textSize="@dimen/device_state" />

            <LinearLayout
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_drip_state"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_drip_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="78%"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/device_state" />

                <ImageView
                    android:id="@+id/iv_drip_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/battery_4" />

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/detail_space"
            android:layout_weight="1"
            android:background="@color/detail_bg"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:text="共"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/message_text" />

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="0"
                    android:textColor="@color/history_text"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="条  消息"
                    android:textColor="@color/choose_title"
                    android:textSize="@dimen/message_text" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.jerry.bedpad.view.MessageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        jerry:message_text="请注意饮食"
                        jerry:round_color="#ffe312" />

                    <com.jerry.bedpad.view.MessageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        jerry:message_color="@color/choose_title"
                        jerry:message_text="奥运会即将开幕"
                        jerry:round_color="#ff1233" />
                </LinearLayout>


            </ScrollView>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
